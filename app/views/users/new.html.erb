<% if @user.errors.any? %>
 <ul>
 <%= @user.errors.size %>
 <% @user.errors.full_messages.each do |error_message| %>
 <li><%= error_message %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for [@user] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :pwd %>
	<%= f.text_field :pwd %>
	<br />
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br />
	<%= f.submit "Save" %>
	<%= f.button "Cancel", :name => "Cancel" %>
<% end %>