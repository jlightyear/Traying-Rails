<% if @location.errors.any? %>
 <ul>
 <%= @location.errors.size %>
 <% @location.errors.full_messages.each do |error_message| %>
 <li><%= error_message %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for [@location] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br />
	<%= f.label :country %>
	<%= f.text_field :country %>
	<br />
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br />
	     <%= f.fields_for :notes do |note_form| %>
         <%= note_form.hidden_field :id %>
         <% if params[:id] %>
         	<%= note_form.check_box :_destroy %>
         <% end %>
         <%= note_form.label :nota %>
         <%= note_form.text_field :name %>
    <% end %>
    <br />
	<%= f.submit "Save" %>
	<%= f.button "Cancel", :name => "Cancel" %>
<% end %>