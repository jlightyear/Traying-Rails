<h1>Locations</h1>
<%= show_flash %>

<ul>
	<% @locations.each do |location| %>
		<li>
		<% if location.name.present? %>
			<%= location.name %> -
		<% end %>
		<%= link_to location.city, location_path(location) %>
		<% if location.description.present? %>
			- <%= location.description %>
		<% end %>
		=> <%= edit_link(edit_location_path(location)) %> - 
		<%= delete_link(location_path(location)) %>
		</li>
	<% end %>
</ul>
<%= link_to "New location", new_location_path %></li>