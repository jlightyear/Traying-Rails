<% if @visit.errors.any? %>
 <ul>
 <%= @visit.errors.size %>
 <% @visit.errors.full_messages.each do |error_message| %>
 <li><%= error_message %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for [@location, @visit] do |f| %>
	<%= f.label :user_name %>
	<%= f.text_field :user_name %>
	<br />
	<%= f.datetime_select :from_date %>
	<br />
	<%= f.datetime_select :to_date %>
	<br />
	<%= f.submit "Save" %>
	<%= f.button "Cancel", :name => "Cancel" %>
<% end %>